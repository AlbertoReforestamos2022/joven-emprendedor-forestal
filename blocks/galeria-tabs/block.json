{
  "apiVersion": 2,
  "name": "jovenemprendedor/galeria-tabs",
  "title": "Galería con Tabs JEF",
  "category": "jef-theme",
  "icon": "images-alt2",
  "description": "Galería organizada por años con tabs",
  "attributes": {
    "titulo": {
      "type": "string",
      "source": "html",
      "selector": "h2",
      "default": "Galería de Ediciones"
    },
    "descripcion": {
      "type": "string",
      "source": "html",
      "selector": ".section-description",
      "default": "Momentos memorables de cada año"
    },
    "years": {
      "type": "array",
      "default": [
        {
          "year": "2024",
          "imagenes": [
            {
              "url": "",
              "caption": ""
            }
          ]
        }
      ]
    },
    "usarVerMas": {
      "type": "boolean",
      "default": false
    },
    "imagenesIniciales": {
      "type": "number",
      "default": 6
    },
    "imagenesPorCarga": {
      "type": "number",
      "default": 6
    },
    "textoVerMas": {
      "type": "string",
      "default": "Ver más fotos"
    },
    "textoVerMenos": {
      "type": "string",
      "default": "Ver menos"
    },
    "verMasButtonBg": {
      "type": "string",
      "default": "#2e7fb1"
    },
    "verMasButtonText": {
      "type": "string",
      "default": "#ffffff"
    },
    "backgroundColor": {
      "type": "string",
      "default": ""
    },
    "tituloColor": {
      "type": "string",
      "default": ""
    },
    "descripcionColor": {
      "type": "string",
      "default": ""
    },
    "tabActiveColor": {
      "type": "string",
      "default": "#2e7fb1"
    },
    "tabInactiveColor": {
      "type": "string",
      "default": "#6c757d"
    },
    "overlayColor": {
      "type": "string",
      "default": "rgba(46, 127, 177, 0.9)"
    },
    "captionTextColor": {
      "type": "string",
      "default": "#ffffff"
    },
    "tituloFontSize": {
      "type": "number",
      "default": 40
    },
    "descripcionFontSize": {
      "type": "number",
      "default": 18
    },
    "textAlign": {
      "type": "string",
      "default": "center"
    },
    "imagenAltura": {
      "type": "number",
      "default": 300
    },
    "columnasDesktop": {
      "type": "number",
      "default": 3
    }
  }
}